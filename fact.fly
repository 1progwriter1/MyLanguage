// factorial

fairytale Fact(n);

once upon the time () {

    n turn into 0;

    say the magic word ("Enter n: ");
    guess the riddle (n);

    ans turn into Fact(n);

    say the magic word ("Answer: ");
    say the magic number (ans);
    say the magic word ("\n");

    end();
}


fairytale Fact(n) {

    stone (n not stronger 1)
    go right {
        end(1);
    }

    n turn into n + 1;

    tmp_fact turn into Fact(n - 2) * (n - 1);
    // tmp turn into n - 30;

    end(tmp_fact);
}